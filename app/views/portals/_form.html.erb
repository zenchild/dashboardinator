<%= form_for @portal do |f|%>
  <fieldset>
    <%= f.hidden_field :user_id, :value => current_user['id'] %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>
  <%= f.submit %>
<% end %>