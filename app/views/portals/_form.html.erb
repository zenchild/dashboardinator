<%= form_for @portal do |f|%>
  <fieldset class="new_edit_form">
    <legend class="new_edit_form"><%= @purpose %> a Portal</legend>
    <%= f.hidden_field :user_id, :value => current_user['id'] %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit %>
  </fieldset>
<% end %>