<div class="new_edit_form">
  <%= form_for @portal do |f|%>
    <fieldset>
      <legend class="new_edit_form"><%= @purpose %> a Portal</legend>
      <div class="form-row">
        <div class="input-item">
          <%= f.hidden_field :user_id, :value => current_user['id'] %>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="input-item"> 
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
      </div>
      <div class="form-row">
        <div class="input-item">
          <%= f.submit %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>